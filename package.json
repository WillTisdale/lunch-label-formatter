{
  "name": "lunch-label-formatter",
  "version": "1.0.0",
  "description": "A Node.js tool for generating Avery label PDFs for school lunch orders using pdf-lib with dynamic template detection",
  "main": "src/index.js",
  "bin": {
    "lunch-label-formatter": "./src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "prepublishOnly": "npm test && npm run lint",
    "security": "npm audit",
    "security:fix": "npm audit fix",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "validate": "npm run lint && npm test && npm run security"
  },
  "keywords": [
    "lunch-orders",
    "school-lunch",
    "avery-labels",
    "pdf-generator",
    "label-formatter",
    "pdf-lib",
    "enterprise",
    "cli-tool"
  ],
  "author": "William Tisdale <will.tisdale.31@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/WillTisdale/lunch-label-formatter.git"
  },
  "bugs": {
    "url": "https://github.com/WillTisdale/lunch-label-formatter/issues"
  },
  "homepage": "https://github.com/WillTisdale/lunch-label-formatter#readme",
  "dependencies": {
    "pdf-lib": "^1.17.1",
    "commander": "^11.1.0",
    "chalk": "^4.1.2",
    "inquirer": "^8.2.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE",
    "run.sh"
  ],
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "publishConfig": {
    "access": "public"
  }
} 